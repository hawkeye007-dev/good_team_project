# Worker Environment Variables

# Celery/Redis Configuration
CELERY_BROKER_URL=redis://localhost:6379/0
CELERY_RESULT_BACKEND=redis://localhost:6379/0

# Database Configuration
# For PostgreSQL/Neon
DATABASE_URL=postgresql://user:password@localhost:5432/reading_list

# OR for MongoDB (if using MongoDB)
# MONGODB_URI=mongodb://localhost:27017/reading_list

# API Configuration (to update database)
API_BASE_URL=http://localhost:5000
API_AUTH_TOKEN=your_auth_token_here

# Scraping Configuration
REQUEST_TIMEOUT=10
MAX_RETRIES=3
RETRY_BACKOFF=2

# Logging
LOG_LEVEL=INFO

